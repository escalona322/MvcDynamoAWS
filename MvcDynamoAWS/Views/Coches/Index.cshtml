@model IEnumerable<MvcDynamoAWS.Models.Coche>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<p>
    <a asp-action="SearchCoches">Filtrar</a>
</p>
@if (Model != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdCoche)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Marca)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Modelo)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Velocidad)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdCoche)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Marca)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Modelo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Velocidad)
                    </td>
                    <td>
                        <a asp-controller="Coches"
                           asp-action="Delete"
                           asp-route-id="@item.IdCoche">
                            Delete
                        </a>
                        <a asp-controller="Coches"
                           asp-action="Details"
                           asp-route-id="@item.IdCoche">
                            Details
                        </a>

                    </td>
                </tr>
            }
        </tbody>
    </table>

}
